@model WorkSearch.ViewModels.Account.EditViewModel;

<h2>Редактировать данные</h2>


 <form class="form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-group">
                <label asp-for="User.Name" class="control-label">Имя</label>
                <input  asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.Surname" class="control-label">Фамилия</label>
                <input  asp-for="User.Surname" class="form-control" />
                <span asp-validation-for="User.Surname" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.Patronymic" class="control-label">Отчество</label>
                <input  asp-for="User.Patronymic" class="form-control" />
                <span asp-validation-for="User.Patronymic" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.Email" class="control-label">Email</label>
                <input  asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.DateOfBirth" class="control-label">Дата рождения</label>
                <input type="date" asp-for="User.DateOfBirth" class="form-control" />
                <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.PhoneNumber" class="control-label">Телефон</label>
                <input  asp-for="User.PhoneNumber" class="form-control" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.PlaceOfResidence" class="control-label">Место жительства</label>
                <input  asp-for="User.PlaceOfResidence" class="form-control" />
                <span asp-validation-for="User.PlaceOfResidence" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.GenderId" class="control-label">Пол</label>
                <select class="form-select" asp-for="User.GenderId">
                    <option hidden selected value="">Выберите пол</option>

            @foreach (var g in Model.GenderOptions)
            {
                    <option value="@g.Key" >@g.Value</option>
            }
                </select>
                <span asp-validation-for="User.GenderId" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="User.MainLanguageId" class="control-label">Родной язык</label>
                <select class="form-select" asp-for="User.MainLanguageId">
                    <option hidden selected value="">Выберите язык</option>

            @foreach (var l in Model.LanguageOptions)
            {
                        <option value="@l.Key" >@l.Value</option>
            }
                </select>
                <span asp-validation-for="User.MainLanguageId" class="text-danger"></span>
            </div>

            <div style="margin-top:10px;" class="form-group box">
                <input type="submit" value="Редактировать" class="btn btn-success" />
            </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }