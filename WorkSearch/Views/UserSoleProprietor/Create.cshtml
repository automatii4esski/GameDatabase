@model WorkSearch.ViewModels.UserSoleProprietor.CreateViewModel;

<h2>Регистрация ИП</h2>

 <form class="form" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SoleProprietor.Description" class="control-label">Описание</label>
                <textarea  asp-for="SoleProprietor.Description" class="form-control" >
                    </textarea>
                <span asp-validation-for="SoleProprietor.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Photo" class="control-label">Фото</label>
                <input accept="image/*"   asp-for="Photo" class="photo-input form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div style="margin-top:10px;" class="form-group box">
                <input type="submit" value="Зарегистрировать" class="btn btn-success" />
            </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function(){
            const fileName = $(this).val().split("\\").pop();
            $(this).next('.photo-input').html(fileName);
        })
    </script>
    }